{
    "private": true,
    "engines": {
        "node": ">=6.5",
        "npm": ">=3.10"
    },
    "dependencies": {
        "react": "15.3.2",
        "react-dom": "15.3.2",
        "react-router": "2.0.0",
        "reset-css": "^2.2.0"
    },
    "devDependencies": {
        "babel-core": "^6.20.0",
        "babel-eslint": "^7.1.1",
        "babel-loader": "^6.2.9",
        "babel-preset-es2015": "^6.18.0",
        "babel-preset-react": "^6.16.0",
        "babel-preset-stage-0": "^6.16.0",
        "classnames": "^2.2.5",
        "css-loader": "^0.26.1",
        "eslint": "^3.12.1",
        "eslint-plugin-react": "^6.8.0",
        "express": "^4.14.0",
        "extract-text-webpack-plugin": "^1.0.1",
        "postcss": "^5.2.6",
        "postcss-browser-reporter": "^0.5.0",
        "postcss-cssnext": "^2.9.0",
        "postcss-import": "^9.0.0",
        "postcss-loader": "^1.2.1",
        "postcss-nested": "^1.0.0",
        "postcss-reporter": "^3.0.0",
        "postcss-url": "^5.1.2",
        "react-hot-loader": "^1.3.1",
        "style-loader": "^0.13.1",
        "webpack": "^1.14.0",
        "webpack-dev-middleware": "^1.8.4",
        "webpack-hot-middleware": "^2.13.2"
    },
    "babel": {
        "presets": [
            "es2015",
            "react",
            "stage-0"
        ]
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "env": {
            "browser": true,
            "node": true
        },
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        },
        "rules": {
            "quotes": [
                2,
                "single"
            ],
            "strict": [
                2,
                "never"
            ],
            "react/jsx-uses-react": 2,
            "react/jsx-uses-vars": 2,
            "react/react-in-jsx-scope": 2
        },
        "plugins": [
            "react"
        ]
    },
    "stylelint": {
        "extends": "stylelint-config-standard",
        "rules": {
            "string-quotes": "single",
            "property-no-unknown": [
                true,
                {
                    "ignoreProperties": [
                        "composes"
                    ]
                }
            ],
            "selector-pseudo-class-no-unknown": [
                true,
                {
                    "ignorePseudoClasses": [
                        "global"
                    ]
                }
            ]
        }
    },
    "scripts": {
        "lint": "eslint ./src",
        "start": "node ./src/server.jsx"
    }
}
